<%- include('./partials/_header.ejs') %>
<%- include('./partials/_navbar.ejs') %>

<body>

  <div class="container py-4">
    <div class="mb-4 d-flex gap-2">
      <button id="btn-search" class="btn btn-primary">Sorgu Parametreleri</button>
      <button id="btn-brands" class="btn btn-outline-primary">Marka Seçimi & Ürünler</button>
    </div>

    <!-- Sorgu Parametreleri Bölümü -->
    <section id="search-screen">
      <h1 class="mb-4">Sorgu Parametreleri</h1>
      <!-- http://localhost:5002/api?keyword=test -->
      <form id="api-form" action="/api" class="mb-5 row g-3 align-items-end">
        <div class="col-md-3">
          <input class="form-control" name="keyword" placeholder="Ürün Adı" autocomplete="off" />
        </div>
        <div class="col-md-2">
          <button class="btn btn-primary w-100" type="submit">Sorgula</button>
        </div>
      </form>
      <div id="result-info" class="small text-muted mb-3"></div>
      <div id="product-results" class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4"></div>
    </section>

    <!-- Marka Seçimi & Ürünler Bölümü -->
    <section id="brands-screen" style="display:none;">
      <h1 class="mb-4">Marka Seçimi & Ürünler</h1>
      <div id="brands-list" class="mb-4 d-flex gap-3 flex-wrap">
        <%
          const brands = ['Marka X', 'Marka Y', 'Marka Z'];
          brands.forEach(b => {
        %>
          <button class="btn btn-outline-secondary brand-btn" data-brand="<%= b %>">
            <%= b %>
          </button>
        <% }) %>
      </div>
      <div id="brand-products" class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-4"></div>
    </section>
  </div>

  <script src="/js/brandProduct.js"></script>

</body>

</html>
