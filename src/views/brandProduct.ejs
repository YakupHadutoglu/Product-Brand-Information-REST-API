<%- include('./partials/_header.ejs') %>
    <%- include('./partials/_navbar.ejs') %>

        <!DOCTYPE html>
        <html lang="tr">

        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <!-- Google Font -->
            <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
                rel="stylesheet">
            <!-- Bootstrap CSS -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
            <!-- Animate.css -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
            <link rel="stylesheet" href="/css/brandProduct.css">
        </head>

        <body>
            <div id="main-container">
                <!-- Filter Panel -->
                <div id="filter-panel">
                    <h5>Kategoriler</h5>
                    <hr>
                    <div id="category-list" class="mb-4" style="height: calc(100% - 2rem); overflow-y: auto;">
                        <div class="form-check mb-2"><input class="form-check-input category-checkbox" type="checkbox"
                                value="A" id="catA" checked><label class="form-check-label" for="catA">Marka A</label>
                        </div>
                        <div class="form-check mb-2"><input class="form-check-input category-checkbox" type="checkbox"
                                value="B" id="catB" checked><label class="form-check-label" for="catB">Marka B</label>
                        </div>
                        <div class="form-check mb-2"><input class="form-check-input category-checkbox" type="checkbox"
                                value="C" id="catC" checked><label class="form-check-label" for="catC">Marka C</label>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div id="main-content">
                    <div class="toggle-container">
                        <button id="toggle-filter" class="btn btn-outline-primary">Kategoriler</button>
                        <div class="search-inline" id="inline-search">
                            <button id="inline-search-btn"><svg xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M21 21l-4.35-4.35M17 11a6 6 0 11-12 0 6 6 0 0112 0z" />
                                </svg></button>
                            <input type="text" id="inline-search-input" placeholder="Ara..." />
                        </div>
                        <button id="toggle-search" class="btn btn-outline-secondary">Ara Paneli</button>
                    </div>

                    <section id="brands">
                        <h2 class="animate__animated animate__fadeInDown">Marka Seçin</h2>
                        <div id="brand-container" class="d-flex justify-content-center flex-wrap">
                            <div class="brand-item animate__animated animate__zoomIn" data-brand="A"
                                style="animation-delay:0s;"><img src="https://via.placeholder.com/80" alt="Marka A">
                            </div>
                            <div class="brand-item animate__animated animate__zoomIn" data-brand="B"
                                style="animation-delay:0.2s;"><img src="https://via.placeholder.com/80" alt="Marka B">
                            </div>
                            <div class="brand-item animate__animated animate__zoomIn" data-brand="C"
                                style="animation-delay:0.4s;"><img src="https://via.placeholder.com/80" alt="Marka C">
                            </div>
                        </div>
                    </section>

                    <div class="wave"><svg viewBox="0 0 1200 80" preserveAspectRatio="none">
                            <path d="M0,40 C400,80 800,0 1200,40 L1200,0 L0,0 Z" fill="white" />
                        </svg></div>

                    <section id="products">
                        <div class="container">
                            <h2 id="product-header" class="text-center animate__animated">Ürünler</h2>
                            <div class="product-grid mt-4" id="product-list">
                                <p class="text-center">Bir marka seçmek için logoya tıklayın.</p>
                            </div>
                        </div>
                    </section>
                </div>

                <!-- Search Panel -->
                <div id="search-panel">
                    <h5>Ürün Ara</h5>
                    <hr>
                    <div class="input-group mb-3"><input type="text" id="search-input" class="form-control"
                            placeholder="Ürün adı..."><button class="btn btn-primary" id="search-button">Ara</button>
                    </div>
                </div>
            </div>

            <!-- JS Libraries -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
            <script src="/js/brandProduct.js"></script>


        </body>

        </html>
