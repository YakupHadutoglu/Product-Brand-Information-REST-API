<script>
function openAdminPanel() {
    const w = screen.availWidth;
    const h = screen.availHeight;

    const features = [
        `width=${w}`,
        `height=${h}`,
        `left=0`,
        `top=0`,
        'toolbar=0',
        'menubar=0',
        'location=0',
        'status=0',
        'scrollbars=1',
        'resizable=1'
    ].join(',');

    const win = window.open('/admin', 'AdminPanel', features);

    if (win) {
        win.moveTo(0, 0);
        win.resizeTo(w, h);
        win.focus();
    } else {
        alert("The browser blocked the pop-up.");
    }
}
</script>
