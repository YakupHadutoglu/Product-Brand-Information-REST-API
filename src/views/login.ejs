<%- include('./partials/_header.ejs') %>

    <%- include('./partials/_navbar.ejs') %>


        <body>
            <div class="container mt-5 lg-4 bg-dark text-light rounded p-4 ">
                <h1 class="text-center">Login</h1>

                <form action="/login" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a href="/auth/google" class="btn btn-danger">Google ile Giri≈ü Yap</a>
                </form>
                <div>
                    <div class="mt-3">
                        <p>Don't have an account? <a href="/register">Register here</a></p>
                    </div>
                    <div class="mt-3">
                        <p>Forgot your password? <a href="/forgot-password">Reset it here</a></p>
                    </div>
                </div>
                <% if (flashMessages.success && flashMessages.success.length> 0) { %>
                    <div class="alert alert-success">
                        <%= flashMessages.success[0] %>
                    </div>
                    <% } %>

                        <% if (flashMessages.error && flashMessages.error.length> 0) { %>
                            <div class="alert alert-danger">
                                <%= flashMessages.error[0] %>
                            </div>
                            <% } %>


                                <!-- Bootstrap JS -->
                                <script
                                    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                                    integrity="sha384-..." crossorigin="anonymous"></script>

        </body>

        </html>
